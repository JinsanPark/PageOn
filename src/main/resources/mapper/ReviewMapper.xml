<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tmtb.pageon.review.mapper.ReviewMapper">

    <select id="selectAllPageBlock" resultType="com.tmtb.pageon.review.model.ReviewVO">
        SELECT * FROM review
    </select>
    <select id="searchListPageBlock" resultType="com.tmtb.pageon.review.model.ReviewVO">
        SELECT * FROM review
    </select>
    <select id="selectAll" resultType="com.tmtb.pageon.review.model.ReviewVO">
        SELECT * FROM review
    </select>
    <insert id="insertOK">
        INSERT INTO review(work_num, title, content, user_id, rating)
        values(#{work_num}, #{title}, #{content}, #{user_id}, #{rating})
    </insert>
    <update id="updateOK">
        UPDATE REVIEW SET work_num=#{work_num}, title=#{title}, content=#{content}, user_id=#{user_id}, rsting=#{rating}, wdate=sysdate
        where num=#{num}
    </update>
    <delete id="deleteOK">
        DELETE FROM REVIEW where num=#{num}
    </delete>
    <select id="selectOne" resultType="com.tmtb.pageon.review.model.ReviewVO">
        SELECT * FROM REVIEW where num=#{num}
    </select>

</mapper>